<Window x:Class="FirstWpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Content" Height="350" Width="434">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="108*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="False" Grid.ColumnSpan="3" Margin="10,0,0,68">
            <ListBox Width="301" Margin="0,10,0,0" SelectionChanged="ListBox_SelectionChanged" ItemsSource="{Binding Path= SampleData}"/>
        </DockPanel>
        <Button Grid.ColumnSpan="3" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="9,270,0,0" Click="Button_Click_1"/>
        <Button Content="Edit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="19,270,0,0" Grid.Column="2" Click="Button_Click"/>
        <Button Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Grid.Column="2" Margin="110,270,0,0" Click="Button_Click_2"/>

    </Grid>
</Window>
